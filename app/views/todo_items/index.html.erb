<p id="notice"><%= notice %></p>

<h1>Todo Items</h1>

<table class="table">
  <thead>
    <tr>
      <th>Description</th>
      <th>Complete</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_items.each do |todo_item| %>
      <tr>
        <td><%= todo_item.description %></td>
        <% if todo_item.complete %>
        <td><i class="fas fa-check"></td>
        <% else %>
        <td><i class="fas fa-times"></td>
        <% end %>
        <!-- <td><%= todo_item.complete %></td> -->
        <td><%= link_to 'Show', todo_item %></td>
        <td><%= link_to 'Edit', edit_todo_item_path(todo_item) %></td>
        <td><%= link_to 'Destroy', todo_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= Time.now.strftime("%m/%d/%Y %I:%M") %>
<br>
<%= link_to 'New Todo Item', new_todo_item_path %>
